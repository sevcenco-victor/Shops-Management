<Window x:Class="Shop.Presentation.Pages.ExportToysWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop.Presentation.Pages"
        mc:Ignorable="d"
        Title="ExportToysWindow"
        Icon="/Assets/Icons/favicon.ico"
        Height="160"
        Width="350">
    <Border Padding="48 36"
            VerticalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition  Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal">
                <Image Source="/Assets/Icons/word.png"
                       Height="48" />
                <Button Style="{StaticResource CustomButtonStyle}"
                        HorizontalAlignment="Left"
                        Padding="24 12"
                        Margin="24 0 0 0"
                        Content="Export MS WORD"
                        Background="{StaticResource blue}"
                        Foreground="white"
                        FontWeight="Bold"
                        Click="ExportWord_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
