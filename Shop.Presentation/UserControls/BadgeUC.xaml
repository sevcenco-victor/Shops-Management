<UserControl x:Class="Shop.Presentation.UserControls.BadgeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Shop.Presentation.UserControls"
             mc:Ignorable="d">
    <Grid Width="{Binding ActualWidth, ElementName=textBlock}">
        <Border x:Name="badgeBorder"
                CornerRadius="4"
                Opacity="0.1"
                Background="{Binding BadgeColor}">
        </Border>
        <TextBlock x:Name="textBlock"
                   Padding="6"
                   HorizontalAlignment="Center"
                   FontSize="10"
                   VerticalAlignment="Center"
                   Text="{Binding BadgeText}" />
    </Grid>
</UserControl>
