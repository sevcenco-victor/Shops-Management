<UserControl x:Class="Shop.Presentation.UserControls.GraphChangeButtonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Shop.Presentation.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Button BorderThickness="0"
            Background="Transparent"
            Click="Button_Click">
        <TextBlock x:Name="buttonText"
                   Foreground="{StaticResource gray}"
                   Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:GraphChangeButtonUC}}, Path=ButtonText}"
                   Padding="4" />
    </Button>
</UserControl>
