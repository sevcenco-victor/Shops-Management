<UserControl x:Class="Shop.Presentation.UserControls.CountryRateBadgeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Shop.Presentation.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Border CornerRadius="8"
            Background="white"
            BorderBrush="{StaticResource lightGray}"
            BorderThickness="1"
            Padding="24 30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock FontSize="20"
                       Grid.Row="0"
                       FontWeight="Bold">Customer by Country</TextBlock>
            <StackPanel Grid.Row="1" x:Name="countryWrapper">
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
